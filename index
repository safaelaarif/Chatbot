<body>

<header>
    <h1>Step-3.5-Flash <small style="font-size: 0.5em; vertical-align: middle;">API Interface</small></h1>
</header>

<div id="chat-container">
    <div class="message ai">Prêt pour une réponse ultra-rapide. Que puis-je faire pour vous ?</div>
</div>

<div class="input-bar">
    <input type="text" id="user-input" placeholder="Écrivez votre message ici...">
    <button onclick="handleSend()">Envoyer</button>
</div>

<script>
    function handleSend() {
        const input = document.getElementById('user-input');
        const container = document.getElementById('chat-container');

        if (input.value.trim() === "") return;

        // Ajouter message utilisateur
        const userDiv = document.createElement('div');
        userDiv.className = 'message user';
        userDiv.textContent = input.value;
        container.appendChild(userDiv);

        const currentText = input.value;
        input.value = "";

        // Simulation de la vitesse "Flash"
        setTimeout(() => {
            const aiDiv = document.createElement('div');
            aiDiv.className = 'message ai';
            aiDiv.innerHTML = "<em>[Réponse de Step-3.5-Flash]</em> : J'ai bien reçu votre message : '" + currentText + "'. Pour activer l'IA réelle, connectez ce front-end à votre clé API StepFun via un serveur proxy.";
            container.appendChild(aiDiv);
            container.scrollTop = container.scrollHeight;
        }, 600);

        container.scrollTop = container.scrollHeight;
    }

    // Permettre d'envoyer avec la touche Entrée
    document.getElementById('user-input').addEventListener('keypress', function (e) {
        if (e.key === 'Enter') handleSend();
    });
</script>

</body>
